[user]
  email = {{ git['email'] }}
  name = {{ git['name'] }}
[push]
  default = simple
  followTags = true
[diff]
  algorithm = patience
[alias]
  prune = fetch --prune
  undo = reset --soft HEAD^
  stash-all = stash save --include-untracked
[merge]
  conflictstyle = diff3
  tool = nvim
[status]
  showUntrackedFiles = all
[transfer]
  fsckobjects = true
[diff]
  tool = icdiff
  guitool = meld
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = icdiff --line-numbers $LOCAL $REMOTE
[core]
  pager = delta --theme="cobalt2"
[interactive]
  diffFilter = delta --color-only --theme="cobalt2"
[http "https://gopkg.in"]
  followRedirects = true
[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[mergetool]
  prompt = false
